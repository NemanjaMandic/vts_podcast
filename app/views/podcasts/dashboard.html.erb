  <%= render 'layouts/header' %>
<div id="podcast_show">
  <div id="show_banner">
    <div class="wrapper_skinny">
      <h1> The Rocketship Podcast Dashboard</h1>
    </div>
  </div>
  <div id="links">
  <div class="wrapper_skinny">
     <ul>
       <li><%= link_to "Episodes", root_path %></li>
       <li><%= link_to "New Episode", new_podcast_episode_path(@podcast) %> </li>
       <li><%= link_to "Account Settings", edit_podcast_registration_path %></li>
       <li><%= link_to "View Podcast", podcast_path(current_podcast) %></li>
     </ul>
   </div><!--END wrapper_skinny-->
  </div><!--END #links-->

    <div id="episodes">
                   <div class="wrapper_skinny">
                       <ul class="cf">
                       <% @episodes.each do |episode| %>
                           <li class="cf">
                               <div class="episode_thumbnail">
                                   <a href="episode.html">
                                      <%= image_tag episode.episode_thumbnail.url(:medium) %>
                                   </a>
                               </div><!--END .episode_thumbnail-->
                               <div class="episode_overview">
                                   <h2><%= link_to episode.title, podcast_episode_path(@podcast, episode) %></h2>
                                   <p class="desc">
                                       <%= truncate(episode.description, length: 160) %>
                                   </p>
                                   <div class="authorized_links">
                                       <%= link_to "Edit", edit_podcast_episode_path(@podcast, episode) %>
                                        <%= link_to "Delete", podcast_episode_path(@podcast, episode), method: :delete, data: {confirm: "Are you sure"} %>
                                      
                                   </div><!--END .authorized_links-->
                               </div><!--END .episode_overview-->
                           </li>
                           <% end %>
                           
                       </ul>
                   </div><!--END .wrapper_skinny-->
               </div><!--END #episodes-->
              </div>

                <div class="pagination">
                    <span class="previous_page disabled">Prethodna</span>
                    <em class="current">1</em>
                    <a href="#">2</a>
                    <a class="next_page" href="#">SledeÄ‡a</a>
            </div><!--END .pagination-->
           </div><!--END #podcast_show-->